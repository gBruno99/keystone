#!/bin/sh

export HOST_PORT=3991;

echo "**** Running QEMU SSH on port ${HOST_PORT} ****";

export SMP=1;

while [ "$1" != "" ]; do
    if [ "$1" = "-debug" ];
    then
        echo "**** GDB port $((HOST_PORT + 1)) ****";
        DEBUG="-gdb tcp::$((HOST_PORT + 1)) -S -d in_asm -D debug.log";
    fi;
    if [ "$1" = "-smp" ];
    then
        SMP="$2";
        shift;
    fi;
    shift;
done;

mkdir -p @buildroot_wrkdir@/images/Bob
cp @buildroot_wrkdir@/images/rootfs.ext2 @buildroot_wrkdir@/images/Bob/rootfs.ext2

@qemu_system@ \
 $DEBUG \
 -m 2G \
 -nographic \
 -machine virt,rom=@bootrom_wrkdir@/bootrom.bin \
 -bios @fw_elf@ \
 -kernel @linux_image@ \
 -append "console=ttyS0 ro root=/dev/vda" \
 -drive file=@buildroot_wrkdir@/images/Bob/rootfs.ext2,format=raw,id=hd0 \
 -device virtio-blk-device,drive=hd0 \
 -netdev user,id=net0,net=192.168.100.1/24,dhcpstart=192.168.100.128,hostfwd=tcp::${HOST_PORT}-:22,hostfwd=tcp::8064-:8064,hostfwd=tcp::8065-:8065 \
 -device virtio-net-device,netdev=net0 \
 -device virtio-rng-pci \
 -smp $SMP
